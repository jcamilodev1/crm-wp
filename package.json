{
  "name": "crm-whatsapp",
  "version": "1.0.0",
  "description": "CRM completo con integraciÃ³n de WhatsApp Web",
  "scripts": {
    "setup": "npm run setup:backend && npm run setup:frontend",
    "setup:backend": "cd backend && npm install && npm run init-db",
    "setup:frontend": "cd frontend && npm install",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:backend": "cd backend && npm start",
    "start:frontend": "cd frontend && npm run preview",
    "build": "npm run build:frontend",
    "build:frontend": "cd frontend && npm run build",
    "install:all": "npm install && npm run setup",
    "postinstall": "echo 'Ejecuta: npm run setup para configurar el proyecto completo'"
  },
  "keywords": [
    "whatsapp",
    "crm",
    "nodejs",
    "react",
    "typescript",
    "express",
    "sqlite"
  ],
  "author": "JCamiloDev",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "shadcn": "^3.2.1"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
